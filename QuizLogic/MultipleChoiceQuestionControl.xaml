<UserControl x:Class="StudyAI.MultipleChoiceQuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudyAI"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <Border x:Name="BorderB" BorderBrush="White" BorderThickness="4" Margin="5" Padding="10" CornerRadius="5">
        <StackPanel>
            <TextBlock x:Name="QuestionText" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,10" />
            <StackPanel x:Name="OptionsContainer" />
            <Button Content="Check Answer" Width="92" FontSize="10" BorderThickness="0" Background="#3685D3" Foreground="White" HorizontalAlignment="Left" Margin="12,10,0,0" Height="21" Click="Button_Click" />
        </StackPanel>
        
    </Border>
</UserControl>
